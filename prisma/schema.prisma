generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id           String   @id @default(cuid())
  name         String
  fixed_prompt String
  seed         BigInt   // Using BigInt for large seeds
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  images       Image[]
}

model Image {
  id          String    @id @default(cuid())
  prompt_used String
  base64      String    @db.Text // Store large base64 string
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
}
